<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/content_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.moviesity.moviesity.DetailFragment"
        tools:showIn="@layout/activity_detail">

        <TextView
            android:text="titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop = "@dimen/movie_detail_view_vertical_margin"
            android:id="@+id/titleTextView"
            android:textSize="@dimen/title_text_size"
            android:textStyle="normal|bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/posterImageView"
            android:paddingTop = "@dimen/movie_detail_view_vertical_margin"
            android:layout_below="@id/titleTextView"/>

        <TextView
            android:text="synopsisTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/synopsisTextView"
            android:paddingTop = "@dimen/movie_detail_view_vertical_margin"
            android:layout_below="@id/posterImageView"/>

        <TextView
            android:text="ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingTextView"
            android:paddingTop = "@dimen/movie_detail_view_vertical_margin"
            android:layout_below="@id/synopsisTextView"/>

        <TextView
            android:text="releaseDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/releaseDateTextView"
            android:paddingTop = "@dimen/movie_detail_view_vertical_margin"
            android:layout_below="@id/ratingTextView"/>
    </RelativeLayout>
</ScrollView>